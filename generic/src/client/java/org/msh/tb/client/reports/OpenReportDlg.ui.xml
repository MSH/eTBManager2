<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:org.msh.tb.client.commons'
	xmlns:rep='urn:import:org.msh.tb.client.reports'>
	
	<ui:with field='msg' type='org.msh.tb.client.reports.resources.ReportConstants'/>

	<ui:style>
	.reportList {
		width: 100%;
		height:400px;
		overflow: auto;
	}    

	.reportList a {
		font-size:16px;
		color: #404040;
	}

	.reportList td {
		padding:4px;
	}

	</ui:style>
		
	<g:DialogBox modal="true" autoHide="true" width="1000px" height="600px">
	    <g:caption><b>Open report</b></g:caption>
	    <g:VerticalPanel width="100%">
	        <g:HTMLPanel styleName="modal-content">
	        	<div class="{style.reportList}">
	            	<g:FlexTable ui:field="tblReports" width="100%" />
		        </div>
	        </g:HTMLPanel>
	        <g:HorizontalPanel styleName="modal-footer" width="100%">
	            <g:Button ui:field="btnCancel">Cancel</g:Button>
	        </g:HorizontalPanel>
	    </g:VerticalPanel>
	</g:DialogBox>
		
</ui:UiBinder>
