<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:org.msh.tb.client.commons'
	xmlns:tbl='urn:import:org.msh.tb.client.tableview'
	xmlns:ch='urn:import:org.msh.tb.client.reports.chart'
	xmlns:x='urn:import:org.msh.tb.client.dashboard'>
	
	<ui:with field='msg' type='org.msh.tb.client.reports.resources.ReportConstants'/>
	
<ui:style>
.title {
	font-size:20px;
	color:#069;
	margin:20px 0 10px 0;
}
.tableRegion {
	width:380px;
	float:left;
	overflow-x:auto;
}
.chart {
	width:400px;
	height:400px;
	float:left;
}
</ui:style>

	<g:HTMLPanel>
	    <g:Label ui:field="txtTitle" styleName="{style.title}"/>
		<div class="{style.tableRegion}">
			<tbl:TableView ui:field="tblResult" />
		</div>
	    <ch:ChartView ui:field="chart" styleName="{style.chart}"/>
	</g:HTMLPanel>
		
</ui:UiBinder>
