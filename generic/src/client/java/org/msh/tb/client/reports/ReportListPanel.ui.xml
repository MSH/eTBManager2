<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:org.msh.tb.client.commons'
	xmlns:rep='urn:import:org.msh.tb.client.reports'>
	
	<ui:with field='msg' type='org.msh.tb.client.reports.resources.ReportConstants'/>

	<ui:style>
	.header {
		background-color:#f8f8f8;
		border:1px solid #f0f0f0;
		border-radius:4px;
		padding:4px;
	}
	.panel {
		width:100%;
	}

	.reportList {
		width: 100%;
	}    

	.reportList a {
		font-size:16px;
		color: #404040;
	}

	.reportList td {
		padding:4px;
	}

	</ui:style>
		
	<g:VerticalPanel styleName="{style.panel}">
        <g:HTMLPanel styleName="{style.header}" width="100%">
            <div style="float:right">
            	<g:Button ui:field="btnClose">Close</g:Button>
            </div>
            <h2>Available org.msh.reports</h2>
        </g:HTMLPanel>
	    <g:HTMLPanel>
           	<g:FlexTable ui:field="tblReports" width="100%" styleName="{style.reportList}"/>
        </g:HTMLPanel>
	</g:VerticalPanel>
		
</ui:UiBinder>
