<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<action execute="#{treatmentHome.initializeEditing}"/>
	<begin-conversation join="true" />
	<param name="id" value="#{caseHome.id}" converterId="javax.faces.Integer" required="true" />
	<navigation>
		<rule if="#{not caseHome.inTreatment}">
			<end-conversation/>
			<redirect view-id="/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}" />
			</redirect>
		</rule>
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}" />
			</redirect>
		</rule>
		<rule if-outcome="cancel">
			<end-conversation before-redirect="true" />
			<redirect view-id="/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}" />
			</redirect>
		</rule>
	</navigation>


</page>