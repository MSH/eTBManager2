<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<restrict>#{userSession.canValidateCases}</restrict>
	<param name="id" value="#{caseHome.id}" converterId="javax.faces.Integer" required="true" />
	<navigation>
		<rule if="#{caseHome.instance.validated}">
			<end-conversation />
			<redirect view-id="/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}" converterId="javax.faces.Integer" />
			</redirect>
		</rule>
		<rule if-outcome="validated">
			<end-conversation />
			<redirect view-id="/cases/casedata.xhtml">
				<message>#{messages['cases.validate.success']}</message>
				<param name="id" value="#{caseHome.id}" converterId="javax.faces.Integer" />
			</redirect>
		</rule>
	</navigation>

</page>