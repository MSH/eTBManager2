<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<restrict>#{userSession.canEditCases}</restrict>
	<param name="id" value="#{caseHome.id}" converterId="javax.faces.Integer"/>

	<navigation>
		<rule if="#{not caseHome.managed}">
			<redirect view-id="/custom/kh/cases/index.xhtml" />
		</rule>
		
		<rule if="#{not caseHome.suspectFollowupAvailable}">
			<redirect view-id="/custom/kh/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}"/>
			</redirect>
		</rule>
		
		<rule if-outcome="followup-registered">
			<end-conversation/>
			<redirect view-id="/custom/kh/cases/casedata.xhtml">
				<param name="id" value="#{caseHome.id}"/>
			</redirect>
		</rule>
	</navigation>
</page>